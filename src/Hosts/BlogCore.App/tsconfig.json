{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "lib": ["es6", "dom"],
    "types": ["webpack-env"],
    "paths": {
      "Components": ["./ClientApp/components"],
      "Components/*": ["./ClientApp/components/*"]
    }
  },
  "include": [
    "./node_modules/@types/**/*.d.ts",
    "./ClientApp/**/*"
  ],
  "exclude": [
      "bin",
      "node_modules"
  ]
}
