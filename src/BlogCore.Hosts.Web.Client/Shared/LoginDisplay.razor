@inject IJSRuntime JS
@inject AppState AppState

<AuthorizeView>
    <Authorized>
        <NavLink class="d-block" href="profile">@context.User.Identity.Name!</NavLink>
        <!--<MatButton Raised="true" OnClick="@LogOut">Logout</MatButton>-->
    </Authorized>
    <NotAuthorized>
        <!--<MatButton Raised="true" OnClick="@LogIn">Login</MatButton>-->
    </NotAuthorized>
</AuthorizeView>

@code {
    async Task LogIn()
    {
        await JS.SignInAsync();
    }

    async Task LogOut()
    {
        await JS.SignOutAsync();
    }
}
