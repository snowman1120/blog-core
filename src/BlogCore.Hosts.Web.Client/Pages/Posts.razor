@page "/posts"
@inject AppState AppState
@inject GuardService GuardService

@code {
    protected override async Task OnInitAsync()
    {
        await GuardService.Check();

        AppState.SetContentHeader("Post", new List<BreadcrumbItem> {
                new BreadcrumbItem { Text = "Home", Route = "#" },
                new BreadcrumbItem { Text = "Posts", Route = "posts" }
        });
    }
}